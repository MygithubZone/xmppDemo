<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="TransparentTheme"></style>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/back_icon</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarStyle.Transparent</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarStyle.Transparent" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions" tools:ignore="NewApi">homeAsUp|showHome|showTitle</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
        <item name="titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>